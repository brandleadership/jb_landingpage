<!-- Image_with_text_start -->
<div data-bsi-element="content-text-image"
    class="template-section-spacer--media-components">
    <div class="row center-xs">
        <div class="col-md-8 col-sm-12 col-xs-12">
            <!-- Image_with_text__content_start -->
            <div class="media-image">
                <div class="media-image__wrap">
                    <!-- Image_with_text__image_start -->
                    <div class="component-content-image--standalone">
                        <div>
                            <img data-bsi-element-part="image"
                                src="{{
                                src
                                    ?
                                    : 'https://via.placeholder.com/615x345?text='
                                }}{{ 'now'|date(
                                    'j\. F Y'
                                ) }}+Bank%20Julius%20Baer"
                                alt="" />
                        </div>
                    </div>
                    <!-- Image_with_text__image_end -->
                    <!-- Image_with_text__text_start -->
                    <div class="col-xs-12 module-content-gallery__content">
                        <p class="text-small module-content-gallery__content-caption"
                            data-bsi-element-part="plain-text"
                            data-bsi-multiline="true">
                            {{ legend
                                ?
                                : 'Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam' }}
                        </p>
                    </div>
                    <!-- Image_with_text__text_end -->
                </div>
            </div>
            <!-- Image_with_text__content_end -->
        </div>
    </div>
</div>
<!-- Image_with_text_end -->
