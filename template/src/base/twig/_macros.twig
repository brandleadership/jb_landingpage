{#
 # Includes components into a dropzone.
 #}
{% macro includeDropzoneComponents(dropzone) %}{% apply spaceless %}
    {% for groups in dropzone %}
        {% for group, elements in groups %}
            {% for element in elements %}
                {% include '../../components/' ~ group ~ '/' ~ element ~ '/template.twig' with { properties: properties } %}
            {% endfor %}
        {% endfor %}
    {% endfor %}
{% endapply %}{% endmacro %}
{#
 # Prints allowed elements of a dropzone.
 #}
{% macro dropzoneAllowedElements(dropzone) %}{% apply spaceless %}
    {% set uniqueElements = [] %}
    {% for group, elements in dropzone %}
        {% for element in elements %}
            {% set element = group ~ '-' ~ element %}
            {% if element not in uniqueElements %}
                {% set uniqueElements = uniqueElements|merge([element]) %}
            {% endif %}
        {% endfor %}
    {% endfor %}
    {{ uniqueElements|join(' ') }}
{% endapply %}{% endmacro %}
